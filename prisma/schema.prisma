// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Transaction {
  BUY
  SELL
  INIT
}

model Stock {
  id                    Int         @id @default(autoincrement())
  tradingsymbol         String      @unique
  quantity              Int         @default(0)
  average_price         Float       @default(0)
  last_action_price     Float       @default(0)
  last_transaction      Transaction @default(INIT)
  last_action_timestamp DateTime    @updatedAt
  balance               Float       @default(0)
  // foreign key
  strategyId           Int         @default(1)
  // prisma internal relation
  strategy             Strategy   @relation(fields: [strategyId], references: [id])
}

model Strategy {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  stocks  Stock[]
}
